.container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #000;
}
.nav_left{
  display: inline-block;
  width: 25%;
  height: 100%;
  background: #fff;
  text-align: center;
  border-right: 1px solid #dedede;
}
.nav_left .nav_left_items{
  height: 50rpx;
  line-height: 50rpx;
  padding: 6px 0;
  font-size: 28rpx;
}
.nav_right{
  position: absolute;
  top: 0;
  right: 0;
  flex: 1;
  width: 75%;
  height: 100%;
  padding: 10px;
  background: #fff;
  box-sizing: border-box;
  font-size: 28rpx;
}
.nav_right .nav_right_items{
  float: left;
  width: 100%;
  text-align: center;
}
.nav_right .nav_right_items image{
  height: 240rpx;
}
.nav_right .weui-grid{
  width:33%;
  border: none;
  padding: 10rpx;
}
.weui-grids{
  border: none;
}
.weui-grid__icon{
   width:100rpx;
   height:90rpx;
}
