.container {
  background-color: #fff;
}
.userinfo {
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;
  align-items: center;
  background: url("https://activity.dapuimg.com/dapu_userCenterBackgroundImage.jpg?imageMogr2/blur/50x12");
  font-size:24rpx;
  color:#fff;
}
.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-top: 20rpx;
  margin-bottom:10rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #fff;
  margin-top:10rpx;
}
.weui_cell{
    position: relative;
    display: flex;
    padding: 20rpx;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 1px solid #dadada;
}
.weui_cell_hd{
  display: inline-block;
  width: 40rpx;
  margin-right: 10rpx;
}
.weui_cell_hd image{
  width: 100%;
  height: 40rpx;
  vertical-align: -4rpx;
}
.weui_cell_bd{
  display: inline-block;
}
.weui_cell_bd_p{
  font-size: 28rpx;
  color: #939393;
}
.badge{
  position: absolute;
  top: 35rpx;
  right: 60rpx;
  color: #DA5278;
  font-size: 20rpx;
}
.with_arrow{
  position: absolute;
  top: 24rpx;
  right: 20rpx;
  width: 36rpx;
  height: 36rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
button{
    background-color: #fff;
    color: #939393;
}