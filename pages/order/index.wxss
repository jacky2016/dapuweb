page {
  background-color: #f0f0f0;
}
.container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #000;
}
.scroll-view_H {
	white-space:nowrap;
	width:100%;
	background-color:rgba(255, 255, 255, 0.7);
}
.nav-hover {
	color:rgb(177, 85, 80);
	border-bottom:3px solid rgb(177, 85, 80);
}
.nav-name {
	display:inline-block;
	font-size:28rpx;
	width: 20%;
  text-align:center;
}
.section{
   font-size: 24rpx;
   background: #fff;
    margin-top: 20rpx;
}
.status{
    position: absolute;
    top: 10rpx;
    right: 10rpx;
}
.topview{
     position: relative;
     padding: 10rpx;
     font-size:24rpx;
}
.middle{
     position: relative;
     padding: 10rpx;
     background:#e6e6e6;
     border-left: 10rpx solid #fff;
     border-right: 10rpx solid #fff;
